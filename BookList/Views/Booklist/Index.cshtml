@model IEnumerable<Bookname>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
          <h2>Book List</h2>
        </div>
        <div class="col-6 text-end">
              <a asp-controller="Booklist" asp-action="Add" class="btn btn-secondary">
                 <i class="bi bi-plus-circle"></i>&nbsp; Add new book
              </a>
        </div>
    </div>

</div>

<table class="table table-bordered table-striped style="width:100%"">
    <thead>
        <tr>
            <th width="50%">
                Book Name
            </th>
            <th width="30%">
                Author Name
            </th>
        </tr>
        <tr></tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td >
                    @obj.BookName
                </td>
                 <td >
                    @obj.Author
                </td>
                 <td>
                    <div class="w-75  btn-group" role="group">
                        <a asp-controller="Booklist" asp-action="Edit" asp-route-id="@obj.Id"> <i class="bi bi-pencil-square"></i>Edit</a>
                       
                         <a asp-controller="Booklist" asp-action="Delete" asp-route-id="@obj.Id"> <i class="bi bi-trash"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>